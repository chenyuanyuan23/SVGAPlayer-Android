<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SvgaDemoActivity">

    <ImageView
        android:id="@+id/svgaImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:background="#364"/>

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/svgaImagePlayer"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/svgaImage"
        android:background="#364"
        android:scaleType="centerCrop"
        app:source="theme_award_beans.svga"/>

    <TextView
        android:id="@+id/tvChangeScaleType"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/svgaImagePlayer"
        android:layout_marginTop="10dp"
        android:background="#f55"
        android:text="切换缩放模式"
        android:gravity="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>